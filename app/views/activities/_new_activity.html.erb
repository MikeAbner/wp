<div id="new-activity" class="hidden">
  <%= form_for @activity, :html => { :id => 'activity-form' } do |f| %>
    <p>
      <%= f.label :what %><br/>
      <%= f.text_field :what %>
    </p>
    <p>
      <%= f.label :date %><br/>
      <input type='date' id='when'/>
      <%= f.hidden_field :when %>
    </p>
    <p>
      <%= f.label :where %><br/>
      <%= f.text_field :where %>
    </p>
    <p>
      <%= f.label :in %><br/>
      <%= f.text_field :in %>
    </p>
    <p>
      <%= f.label :with %>&nbsp;&nbsp;&nbsp;<span id='chosen-friends'></span>&nbsp;&nbsp;&nbsp;<a href='#' id='open-friend-picker-btn' rel="#friend-picker-container">Choose Friends</a><br/>
      <%= f.hidden_field :with %>
    </p>
    <p>
      <%= f.label :desc %><br/>
      <%= f.text_area :desc, :rows => 5, :cols => 55 %>
    </p>
    <p>
      <%= f.label :fb_post %>&nbsp;
      <%= f.check_box :fb_post %>
    </p>
    <p>
      <a href='#' id='save-activity-btn'>Save</a>&nbsp;&nbsp;&nbsp;
      <a href='#' id='cancel-btn'>Cancel</a>
    </p>
  <% end %>
</div>

<div id='friend-picker-container'>
  <div id="friend-picker"></div>
  <a href='#' id='choose-friends-btn'>Ok</a>
  <a href='#' id='cancel-friends-btn'>Cancel</a>
</div>
