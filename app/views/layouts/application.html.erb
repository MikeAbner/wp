<!DOCTYPE html>
<html>
	<head>
		<title>The Wanderphiles</title>
		<meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
		
    <%= stylesheet_link_tag 'styles.css', 'jquery.facebook.multifriend.select.css', 'dateinput.css' %>
		
	  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery.tools.min.js' %>
    <%= csrf_meta_tag %>

		<script type="text/javascript">
			document.documentElement.className += 'js-ready';
		</script>

		<!-- IE scripts and stylesheets -->
		<!--[if lt IE 9]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
			<script src="js/iefixes.js" type="text/javascript"></script>
		<![endif]-->
	</head>
	<body>
    <div id='site-container'>
      <header>
        <%= link_to( image_tag( 'title.png' ), root_path ) %>
      </header>
      <nav>
        <% if user_signed_in? %>
          <%= render 'common/site_nav', :show => true %>
          <%= render 'common/tag_line', :show => false %>
        <% else %>
          <%= render 'common/site_nav', :show => false %>
          <%= render 'common/tag_line', :show => true %>
        <% end %>
      </nav>
      <div id="content">
        <%= yield %>
      </div>
      <footer>
        <% if session['user_id'] %>
          <%= link_to 'logout', logout_path %>
        <% end %>
      </footer>
    </div>
  </body>
</html>
